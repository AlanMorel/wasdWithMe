<div class="container">
    <div class="all-messages">
        <div class="top-header">Messenger</div>
    </div>
    <div class="main">
        <div class="header">
            <div class="pic">
                <img class="profile-pic" src="/images/profile/{{to.display_name}}.png">
            </div>
            <div class="user-info">
                <div class="username">{{to.display_name}}<span class="status {{to.online_status}}"></span></div>
                <div class="extra-info">
                    <span class="age">{{age}}</span>
                    &bull;
                    <span class="location">{{to.location.city}}, {{to.location.state}}, {{to.location.country}}</span>
                    &bull;
                    <span class="gender">{{gender}}</span>
                </div>
                <div class="tagline">{{to.tagline}}</div>
            </div>
        </div>
        <div class="chat">
        {{#each messages}}
            <div class="bubble">
                <span class="{{this.css}}-message">{{this.from}}: {{this.message}}</span>
            </div>
        {{/each}}
        </div>
        <form class="chat-form">
            <input class="input" placeholder="Type a message...">
            <input type="submit" value="Send Message" class="button">
        </form>
    </div>
</div>
