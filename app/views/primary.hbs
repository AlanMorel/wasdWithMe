<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
      {{>header}}

      <link rel="stylesheet" href="/stylesheets/{{file}}.css" />
  </head>
  <body>
  <div class="wasd-header">
      <a href="/">
          <img src="/images/logo.png" class="logo">
      </a>
      <div class="wasd-text">
          <div class="wasd-top">
          {{#if user}}
              Hello, {{user.username}}
          {{else}}
              Hello, Guest
          {{/if}}
          </div>
          <div class="wasd-bottom">
          {{#if user}}
              <a href="/user/{{user.display_name}}/messages">Messages</a>
              <a href="/user/{{user.display_name}}">Profile</a>
              <a href="/logout">Log Out</a>
          {{else}}
              <a href="/login">Log In</a>
          {{/if}}
          </div>
      </div>
  </div>
  <div class="search">
      <form method="get" action="/search">
          <span class="results-box"></span>
          <input name="query" type="text" autocomplete="off" onkeyup="showSearchResults(this.value)" placeholder="Search for people or games..." />
          <input type="image" src="/images/search.png" alt="Submit Form" />
      </form>
  </div>
    {{{body}}}
  <footer>
      <div class="top"></div>
      <div class="bottom">Copyright Â© 2016 wasdWithMe. All rights reserved.</div>
  </footer>
  </body>
  <script src="/javascript/{{file}}.js"></script>
  <script src="/javascript/primary.js"></script>
</html>
