<div class="refinement">
    <form method="get" action="/search" onsubmit="return sendRefinedQuery()">
        <div class="type">
            <div class="category">Filter Users</div>
            <div class="option">
                <div class="option-header">Weekdays Availability</div>
                <div><input type="checkbox" value="weekdaysmorning"> Morning</div>
                <div><input type="checkbox" value="weekdaysday"> Day</div>
                <div><input type="checkbox" value="weekdaysnight"> Night</div>
                <div><input type="checkbox" value="weekdaysnever"> Never</div>
            </div>
            <div class="option">
                <div class="option-header">Weekends Availability</div>
                <div><input type="checkbox" value="weekendsmorning"> Morning</div>
                <div><input type="checkbox" value="weekendsday"> Day</div>
                <div><input type="checkbox" value="weekendsnight"> Night</div>
                <div><input type="checkbox" value="weekendsnever"> Never</div>
            </div>
            <div class="option">
                <div class="option-header">Age</div>
                <input type="number" min="13" max="100" value="18">
                to
                <input type="number" min="13" max="100" value="65">
            </div>
            <div class="option">
                <div class="option-header">Gender</div>
                <select>
                    <option value="-1">Any</option>
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                    <option value="2">Other</option>
                </select>
            </div>
            <div class="option">
                <div class="option-header">Owns Game</div>
                <input type="text" name="owns" placeholder="Enter a game...">
            </div>
        </div>
        <div class="type">
            <div class="category">Filter Games</div>
            <div class="option">
                <div class="option-header">Release</div>
                <input type="number" min="1970" max="2020" value="1980">
                to
                <input type="number" min="1970" max="2020" value="2018">
            </div>
        </div>
        <div class="button-container">
            <input type="submit" value="Refine Search" class="button">
        </div>
    </form>
</div>
<div class="query">Showing results for '{{query}}'</div>
<div class="search-results">
{{#each results}}
    <a href='/{{type}}/{{name}}'>
        <div class="search-result">
            <img src="{{image}}"/>
            <div class="search-info">
                <div class="search-name">{{name}}</div>
                <div class="search-description">{{description}}</div>
            </div>
        </div>
    </a>
{{else}}
    <span>Sorry, your search did not return any results.</span>
{{/each}}
</div>
<div class="pagination">
{{#each pages}}
    <a href="/search?type={{../type}}&query={{../query}}&page={{this.page_id}}">
        <span {{#if this.current}}class="current"{{/if}}>{{this.page_id}}</span>
    </a>
{{/each}}
</div>