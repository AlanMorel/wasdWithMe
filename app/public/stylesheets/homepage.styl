@import "primary.styl"

.promo, .promo2 {
  display: inline-block;
  text-align: center;
  width: 100%;
}

.promo {
  background-color: wasdWithMeGray;
}

.promo2 {
  background-color: wasdWithMePurple;
}


.promo .left, .promo .right, .promo2 .left, .promo2 .right{
  width: 50%;
}

.promo .left {
  float: left;
}

.promo .right {
  display: inline-block;
}

.promo2 .left {
  float: left;
}

.promo2 .right {
  display: inline-block;
}


.right h1, .left h1 {
  font-size: 3vw;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 100;
  margin: 0;
  line-height: 9vw;
}

.right h2, .left h2 {
  font-size: 1.5vw;
  padding-left: 5vw;
  padding-right: 5vw;
  font-family: 'Roboto', sans-serif;
  font-weight: lighter;
  margin-top: 0;
}

img.couple {
  max-width: 100%;
  vertical-align: middle;
}

.tagline {
  background-color: wasdWithMeGray;
  text-align: center;
}

.tagline-header {
  line-height: 100px;
  font-weight: lighter;
  font-size: 28px;
}

.tagline-footer {
  line-height: 100px;
  font-weight: lighter;
  font-size: 20px;
}

.logos img {
  margin-left: 20px;
  margin-right: 20px;
  height: 100%;
  max-height: 64px;
}

.live-profiles {
  width: 100%;
  height: 325px;
  color: #000;
  padding-top: 25px;
  padding-bottom: 25px;
  text-align: center;
}

.live-profiles-header {
  line-height: 50px;
  font-size: 24px;
  padding-bottom: 25px;
}

.live-profile {
  width: 150px;
  display: inline-block;
  border-radius: 8px;
  border: 1px solid #ddd;
  padding-top: 24px;
  margin-left: 15px;
  margin-right: 15px;

  a {
    color: black;
  }
  a:hover {
    color: darkorange;
  }
}

.live-profile:hover{
  border: 1px solid #aaa;
}

.live-profile-pic {

}

.live-profile-username {
  font-weight: 300;
  font-size: 20px;
  margin-bottom: 12px;
  margin-top: 12px;
  padding: 6px 0px 6px 0px;
  background-color: #f7f7f7;
}

.live-profile-platforms{
  background-color: wasdWithMeGray;
  padding-top: 8px;
  padding-bottom: 8px;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.live-profile-platform{
  height: 16px;
  margin-left: 6px;
  margin-right: 6px;
}

.live-profile-oneUps {
  font-size: 18px;
  margin-bottom: 20px;
}

.one-ups-label{
  font-size: 10px;
  border-radius: 6px;
  border: 1px solid #008629;
  padding: 2px 4px 2px 4px;
  vertical-align: middle;
  color: #008629;
  background-color: #edfff3;
}

.sign-up-button {
  padding-top: 2vw;
}

@media only screen and (max-width: 950px) {

  .promo .left, .promo .right, .promo2 .left, .promo2 .right {
    width: 100%;
  }

  .promo .right, .promo2 .left {
    padding-bottom: 20px;
  }

  .right h1, .left h1 {
    font-size: 6vw;
    line-height: 15vw;
  }

  .right h2, .left h2 {
    font-size: 2.5vw;
    padding-left: 5vw;
    padding-right: 5vw;
  }

  .sign-up-button {
    padding-bottom: 5vw;
    padding-top: 5vw;
  }

  .button {
    font-size: 4vw;
    padding: 3vw 10vw;
  }

  .tagline-header {
    font-size: 4vw;
  }

  .tagline-footer {
    font-size: 2.5vw;
    line-height: 10vw;
    padding-left: 2vw;
    padding-right: 2vw;
    padding-bottom: 2vw;
  }

  .logos img {
    margin-left: 10px;
    margin-right: 10px;
    height: 12vw;
  }

  .live-profiles {
    display: table;
    padding-bottom: 25px;
  }

  .live-profiles-header {
    font-size: 22px;
  }

  .live-profile {
    margin-bottom: 20px;
  }
}
