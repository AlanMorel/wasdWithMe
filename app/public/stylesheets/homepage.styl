@import "primary.styl"

html,body {
  height:100%;
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  color: #FFFFFF;
}


img.couple{
  max-width:100%;
  max-height:100%;
  display: inline-block;
  vertical-align: middle;
}

.promo {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMeGray;
}

.promo .left{
  width: 50%;
  float: left;
  display: inline-block;
}
.promo .right{
  width: 50%;
  display: inline-block;
  height: 100%;
  padding-top: 20px;
}

.right h1, .left h1{
  text-align: center;
  color: white;
  font-size: 3.0vw;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 100;
}

.right h2, .left h2{
  text-align: center;
  color: white;
  font-size: 1.25vw;
  padding-left: 15%;
  padding-right: 15%;
  font-family: 'Roboto', sans-serif;
  font-weight: lighter;
  padding-bottom: 4%;
}

.promo2 {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMePurple;
}

.promo2 .left{
  width: 50%;
  float: left;
  display: inline-block;
  color: #FFFFFF;
  text-align: center;
}
.promo2 .right{
  width: 50%;
  display: inline-block;
  height: 100%;
}
  
.tagline {
  height: 11vw;
  line-height: 5vw;
  width: 100%;
  background-color: wasdWithMeGray;
  text-align: center;
  font-weight: lighter;
  font-size: 1.5vw;
}

.logos img {
  margin-left: 20px;
  margin-right: 20px;
  height: 100%;
  max-height: 64px;
}

.logos {
  height: 5vw;
}

.live-profiles {
  width: 100%;
  height: 10vw;
}