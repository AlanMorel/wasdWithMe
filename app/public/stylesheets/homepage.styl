@import "primary.styl"

html, body {
  height: 100%;
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  color: #FFFFFF;
}

img.couple {
  max-width: 100%;
  max-height: 100%;
  display: inline-block;
  vertical-align: middle;
}

.promo {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMeGray;
}

.promo .left {
  width: 50%;
  float: left;
  display: inline-block;
}

.promo .right {
  width: 50%;
  display: inline-block;
  height: 100%;
}

.right h1, .left h1 {
  text-align: center;
  color: #fff;
  font-size: 3vw;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 100;
  margin: 0;
  line-height: 9vw;
}

.right h2, .left h2 {
  text-align: center;
  color: #fff;
  font-size: 1.25vw;
  padding-left: 75px;
  padding-right: 75px;
  font-family: 'Roboto', sans-serif;
  font-weight: lighter;
}

.promo2 {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMePurple;
}

.promo2 .left {
  width: 50%;
  float: left;
  display: inline-block;
  color: #FFFFFF;
  text-align: center;
}

.promo2 .right {
  width: 50%;
  display: inline-block;
}

.tagline {
  width: 100%;
  background-color: wasdWithMeGray;
  text-align: center;
}

.tagline-header {
  line-height: 100px;
  font-weight: lighter;
  font-size: 28px;
}

.tagline-footer {
  line-height: 100px;
  font-weight: lighter;
  font-size: 20px;
}

.logos img {
  margin-left: 20px;
  margin-right: 20px;
  height: 100%;
  max-height: 64px;
}

.logos {
  height: 75px;
}

.live-profiles {
  width: 100%;
  height: 325px;
  color: #000;
  padding-top: 25px;
  text-align: center;
}

.live-profiles-header {
  line-height: 50px;
  font-size: 24px;
  padding-bottom: 25px;
}

.live-profile {
  width: 150px;
  display: inline-block;
  border-radius: 8px;
  border: 1px solid #eee;
  padding-top: 24px;
  padding-bottom: 24px;
  margin-left: 15px;
  margin-right: 15px;

  a {
    color: black;
  }
  a:hover {
    color: darkorange;
  }
}

.live-profile-pic {

}

.live-profile-username {
  font-weight: 300;
  font-size: 20px;
  margin-bottom: 10px;
  margin-top: 10px;
}

.live-profile-oneUps {
  font-size: 14px;
}

.sign-up-button {
  padding-top: 2vw;
}

@media only screen and (max-width: 950px) {

  .promo .left, .promo .right, .promo2 .left, .promo2 .right {
    width: 100%;
  }

  .promo .right, .promo2 .left {
    padding-bottom: 20px;
  }

  .right h1, .left h1 {
    font-size: 6vw;
    line-height: 15vw;
  }

  .right h2, .left h2 {
    font-size: 2.5vw;
    padding-left: 5vw;
    padding-right: 5vw;
  }

  .sign-up-button {
    padding-bottom: 5vw;
    padding-top: 5vw;
  }

  .button {
    font-size: 4vw;
    padding: 3vw 10vw;
  }

  .tagline-header {
    font-size: 4vw;
  }

  .tagline-footer{
    font-size: 2.5vw;
    line-height: 10vw;
    padding-left: 2vw;
    padding-right: 2vw;
    padding-bottom: 2vw;
  }

  .logos {
    img {
      margin-left: 10px;
      margin-right: 10px;
      height: 12vw;
    }
    height: 15vw;
  }

  .live-profiles{
    display: table;
    padding-bottom: 25px;
  }

  .live-profiles-header{
    font-size: 22px;
  }

  .live-profile{
    margin-bottom: 20px;
  }
}
