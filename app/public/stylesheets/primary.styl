@import "master.styl"

html {
  color: white;
}
  
.header{
  height: 5vw;
  background-color: wasdWithMePurple;
  padding: 1vw;
  padding-right: 2vw;
}

.logo {
  height: 100%;
}

transition(transition){
  -moz-transition: transition;
  -o-transition: transition;
  -webkit-transition: transition;
  transition: transition;
}

.button {
  font-family: 'Source Sans Pro', sans-serif;
  letter-spacing: 1px;
  border: 1px solid #cccccc;
  cursor: pointer;
  color: #000000;
  background: #FFFFFF;
  border-radius: 4px;
  font-weight: lighter;
  padding: 2% 6%;
  text-decoration: none;
  font-size: 1.5vw;
  transition(all 0.1s ease-in-out);
}

.button:hover {
  background: #282828;
  cursor: pointer;
  color: #FFFFFF;
  border: 1px solid #111111;
}

.header-text {
  display: inline-block;
  float: right;
  height: 100%;
  text-align: right;
  font-size: 1vw;
}

.header-top{
  font-family: 'Roboto', sans-serif;
  margin: auto;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  padding-bottom: 1vw;
  padding-top: 0.5vw;
}