@import "master.styl"

html {
  color: white;
}

.wasd-header {
  height: 75px;
  background-color: wasdWithMePurple;
  padding: 15px;
}

.logo {
  height: 100%;
}

transition(transition) {
  -moz-transition: transition;
  -o-transition: transition;
  -webkit-transition: transition;
  transition: transition;
}

.button {
  font-family: 'Source Sans Pro', sans-serif;
  letter-spacing: 1px;
  border: 1px solid #cccccc;
  cursor: pointer;
  color: black;
  background: white;
  border-radius: 4px;
  font-weight: lighter;
  padding: 2% 6%;
  text-decoration: none;
  font-size: 1.5vw;
  transition(all 0.1s ease-in-out);
}

.button:hover {
  background: wasdWithMeGray;
  cursor: pointer;
  color: white;
  border: 1px solid #111111;
}

.wasd-text {
  display: inline-block;
  float: right;
  height: 100%;
  text-align: right;
  font-size: 1vw;
  margin-top: 6px;
}

.wasd-top {
  font-family: 'Roboto', sans-serif;
  margin: auto;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  font-size: 16px;
}

.wasd-bottom {
  font-size: 20px;
  margin-top: 12px;
  a {
    margin-left: 16px;
  }
}


form {
  position: relative;
}

.search {
  height: 40px;
  background-color: #53368a;
  text-align: center;
  padding-top: 16px;
  padding-bottom: 10px;
  input[type="text"] {
    width: 350px;
    font-size: 18px;
    height: 24px;
    padding: 4px;
    border-radius: 4px;
    border: none;
    outline: none;
  }
  input[type="image"] {
    max-height: 32px;
    max-width: 32px;
    vertical-align: top;
    margin-left: 6px;
  }
  .results-box {
    position: absolute;
    top: 50px;
    background: #fff;
    color: #000;
    width: 500px;
    padding: 2px 6px 2px 6px;
    border-radius: 4px;
    visibility: hidden;
    z-index: 1;
    box-shadow: 0 0 75px black;
    img {
      max-width: 64px;
      vertical-align: middle;
    }
  }

  .result {
    text-align: left;
    display: inline-block;
    width: 100%;
    margin-bottom: 4px;
    margin-top: 4px;
    cursor: pointer;
    color: black;
  }

  .result:hover {
    background-color: wasdWithMePurple;
    color: white;
  }

  .info {
    float: right;
    width: 425px;
    .name {
      font-size: 18px;
    }
    .description {
      font-size: 14px;
      display: inline-block;
    }
  }
}

footer {
  height: 225px;
  background-color: wasdWithMeGray;

  .top {
    height: 150px;
  }
  .bottom {
    background-color: rgba(0, 0, 0, 0.25);
    height: 75px;
    text-align: center;
    line-height: 75px;
    font-size: 14px;
    font-family: 'Roboto', sans-serif;
  }
}

.one-ups-label {
  font-size: 10px;
  border-radius: 6px;
  border: 1px solid #008629;
  padding: 2px 4px 2px 4px;
  vertical-align: middle;
  color: #008629;
  background-color: #edfff3;
  cursor: pointer;
}

.one-ups-label:hover {
  background-color: #cfffd4;
}

@media only screen and (max-width: 600px) {
  .wasd-header {
    height: 50px;
  }

  .wasd-top {
    font-size: 14px;
  }

  .wasd-text {
    margin-top: 0;
  }

  .wasd-bottom {
    font-size: 18px;
  }

  .search input[type="text"] {
    width: 70vw;
    font-size: 16px;
  }
}
