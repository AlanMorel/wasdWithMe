@import "master.styl"

html {
  color: white;
}
  
.header{
  height: 5vw;
  background-color: wasdWithMePurple;
  padding: 1vw;
  padding-right: 2vw;
}

.logo {
  height: 100%;
}

img.couple{
  max-width:100%;
  max-height:100%;
  display: inline-block;
  vertical-align: middle;
}

.promo {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMeGray;
}

.promo .left{
  width: 50%;
  float: left;
  display: inline-block;
}
.promo .right{
  width: 50%;
  display: inline-block;
  height: 100%;
  padding-top: 20px;
}

.right h1, .left h1{
  text-align: center;
  color: white;
  font-size: 3.0vw;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 100;
}

.right h2, .left h2{
  text-align: center;
  color: white;
  font-size: 1.25vw;
  padding-left: 15%;
  padding-right: 15%;
  font-family: 'Roboto', sans-serif;
  font-weight: lighter;
  padding-bottom: 4%;
}

.promo2 {
  width: 100%;
  display: inline-block;
  background-color: wasdWithMePurple;
}

.promo2 .left{
  width: 50%;
  float: left;
  display: inline-block;
  color: #FFFFFF;
  text-align: center;
}
.promo2 .right{
  width: 50%;
  display: inline-block;
  height: 100%;
}

transition(transition){
  -moz-transition: transition;
  -o-transition: transition;
  -webkit-transition: transition;
  transition: transition;
}

.button {
  font-family: 'Source Sans Pro', sans-serif;
  letter-spacing: 1px;
  border: 1px solid #cccccc;
  cursor: pointer;
  color: #000000;
  background: #FFFFFF;
  border-radius: 4px;
  font-weight: lighter;
  padding: 2% 6%;
  text-decoration: none;
  font-size: 1.5vw;
  transition(all 0.1s ease-in-out);
}

.button:hover {
  background: #282828;
  cursor: pointer;
  color: #FFFFFF;
  border: 1px solid #111111;
}

.header-text {
  display: inline-block;
  float: right;
  height: 100%;
  text-align: right;
  font-size: 1vw;
}

.header-top{
  font-family: 'Roboto', sans-serif;
  margin: auto;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  padding-bottom: 1vw;
  padding-top: 0.5vw;
}

.tagline {
  height: 11vw;
  line-height: 5vw;
  width: 100%;
  background-color: wasdWithMeGray;
  text-align: center;
  font-weight: lighter;
  font-size: 1.5vw;
}

.logos img {
  margin-left: 20px;
  margin-right: 20px;
  height: 100%;
  max-height: 64px;
}

.logos {
  height: 5vw;
}