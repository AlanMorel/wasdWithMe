@import "master.styl"
@import "variables.styl"
body{
  min-width: 320px;
}
.wasd-header {
  height: 75px;
  background-color: wasdWithMePurple;
  padding: 15px;
}
.logo {
  height: 100%;
}
transition(transition) {
  -moz-transition: transition;
  -o-transition: transition;
  -webkit-transition: transition;
  transition: transition;
}
.button {
  cursor: pointer;
  color: black;
  background: white;
  border-radius: 4px;
  padding: 2% 6%;
  font-size: 1.5vw;
  transition(all 0.1s ease-in-out);
  text-transform: uppercase;
  font-family: Roboto, sans-serif;
  font-weight: bold;
  letter-spacing: 2px;
}
.button:hover {
  background: wasdWithMeGray;
  color: white;
  border: 1px solid #111111;
}
.wasd-text {
  float: right;
  text-align: right;
  margin-top: 6px;
}
.wasd-top {
  text-align: right;
  letter-spacing: 1.5px;
}
.wasd-bottom {
  font-size: 20px;
  margin-top: 12px;
  a {
    margin-left: 16px;
  }
}
.name {
  font-size: 18px;
  padding-bottom: 6px;
  padding-top: 4px;
}
form {
  position: relative;
}
.search, .sub-results-box {
  height: 40px;
  background-color: #411c77;
  text-align: center;
  padding: 16px 0 10px 0;
  select {
    font-size: 16px;
    padding: 5px 0 6px 0;
    vertical-align: middle;
    border-radius: 4px;
    margin:0 6px 2px 0;
  }
  input[type="text"] {
    width: 350px;
    font-size: 18px;
    height: 24px;
    padding: 4px;
    border-radius: 4px;
    border: none;
    outline: none;
  }
  input[type="image"] {
    max-height: 32px;
    max-width: 32px;
    vertical-align: top;
    margin-left: 6px;
  }
  .result {
    text-align: left;
    margin: 4px 0 4px 0;
    cursor: pointer;
    width: 100%;
    float: left;
    color: black;
    padding: 8px 0 8px 0;
  }
  .result:hover {
    background-color: wasdWithMePurple;
    color: white;
  }
}
.info {
  width: 350px;
  display: inline-block;
  vertical-align: top;
}
.description {
  font-size: 13px;
  display: inline-block;
  max-height: 94px;
  overflow: hidden;
}
.results-box, .sub-results-box {
  position: absolute;
  top: 50px;
  background: white;
  color: black;
  padding: 2px 0 2px 0;
  border-radius: 4px;
  visibility: hidden;
  box-shadow: 0 0 75px black;
  width: 500px;
  max-height: 500px;
  overflow-y: auto;
  margin-left: -90px;
  z-index: 1;
  img {
    max-width: 100px;
    margin: 0 10px 0 10px;
    display: inline-block;
  }
}
footer {
  margin-top: 10vh;
  background-color: wasdWithMeGray;
  text-align: center;
  .top {
    width: 800px;
    text-align: left;
    margin: 0 auto 24px auto;
  }
  .bottom {
    background-color: rgba(0, 0, 0, 0.5);
    line-height: 70px;
    font-size: 14px;
    font-family: 'Roboto', sans-serif;
  }
}
.one-ups-button {
  font-size: 10px;
  border-radius: 6px;
  border: 1px solid #008629;
  padding: 2px 6px 2px 4px;
  vertical-align: middle;
  margin-left: 6px;
  line-height: 22px;
  color: #008629;
  background-color: #edfff3;
  cursor: pointer;
}
.one-ups-button:hover {
  background-color: #cfffd4;
}
.one-upped {
  background-color: #009e30;
  color: white;
}
.one-upped:hover {
  background-color: #008629;
 }
.section {
  display: inline-block;
  width: 240px;
  vertical-align: top;
}
.footer-header {
  margin: 20px 0 10px 0;
  font-size: 20px;
}
footer img {
  width: 100px;
}
.madeinny-container {
  text-align: center;
}
.footer-item {
  margin-bottom: 10px;
}
@media only screen and (max-width: 550px) {
  .wasd-header {
    height: 50px;
  }
  .wasd-top {
    font-size: 14px;
  }
  .wasd-text {
    margin-top: 0;
  }
  .wasd-bottom {
    font-size: 13px;
  }
  .search{
    input[type="text"] {
      width: 50vw;
      font-size: 14px;
    }
    .result{
      width:100%;
    }
  }
  .results-box, .sub-results-box {
    width: 98%;
    left: 1vw;
    margin-left: 0;
    max-height: 50vh;
  }
  .results-box img, .sub-results-box img {
    max-width: 15vw;
    vertical-align: middle;
  }
  .info {
    width: 80%;
    padding-right:0;
  }
  .name {
    font-size: 3vw;
  }
  .description {
    font-size: 2vw;
  }
}
@media only screen and (max-width: 750px) {
  .section {
    width: 90%;
    margin-left: 20px;
  }
  footer {
    .top {
      height: initial;
      width: 100%;
    }
    .bottom {
      font-size: 3vw;
    }
  }
  .madeinny, .madeinny-container {
    text-align: center;
    img {
      width: 50%;
    }
  }
}
