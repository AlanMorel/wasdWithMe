@import "primary.styl"

body{
  background-color: #e9ebee;
}

.container{
  color:black;
  position: relative;
  width: 700px;
  margin: auto;
}
.banner {
  max-height: 400px;
  overflow: hidden;
  position: absolute;
  width: 100%;
  img {
    width: 100%;
    -webkit-filter: blur(3px) brightness(50%);
    filter:blur(3px) brightness(50%);
    transform: scale(1.1);
  }
}

.top {
  display: inline-block;
}

h1{
  font-weight: lighter;
}

.game {
  margin-top: 125px;
  .top{
    min-height: 300px;
    margin-bottom: 10px;
  }
}

  .boxart{
    float: left;
    box-shadow: 0 0 50px rgba(255, 255, 255, 0.5);
    max-height: 350px;
  }

.game-name {
  color: white;
  display: inline-block;
  font-size: 50px;
  font-weight: bold;
  margin-left: 20px;
  letter-spacing: 2px;
  max-width: 400px;
  margin-top: 30px;
}

.release-date {
  color: lightgrey;
  display: inline-block;
  font-size: 22px;
  margin-left: 25px;
  min-width: 400px;
}

.game-description {
  margin-bottom: 40px;
}

.rating {
  color: white;
  position: absolute;
  left: 600px;
  top: 225px;
  font-size: 36px;
  font-weight: lighter;
  min-width: 80px;
  padding-left: 10px;
  padding-top: 40px;
}

img.screenshot {
  max-width: 340px;
}
