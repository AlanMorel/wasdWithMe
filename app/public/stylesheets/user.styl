body {
  background-color: white;
}

.profile {
  color: wasdWithMeGray;
  width: 800px;
  margin: auto;
  margin-top: 50px;
  margin-bottom: 50px
  background-color: #eee;

  img {
    max-width: 128px;
    max-height: 128px;
  }
}

.header {

}

.pic {
  display: inline-block;
}

.info {
