@import "primary.styl"

body {
  background-color: #e9ebee;
}

.profile {
  color: black;
  background-color: white;
  width: 800px;
  margin: auto;
  margin-top: 50px;
  margin-bottom: 50px
  border-radius: 8px;
  border: 1px solid #dddddd;
  overflow: hidden;

  img {
    max-width: 128px;
    max-height: 128px;
    vertical-align: bottom;
  }
}

.header {

}

.pic {
  display: inline-block;
}

.info {
  display: inline-block;
  vertical-align: top;
  margin-left: 20px;
}

.username {
  display: inline;
  vertical-align: top;
  font-size: 40px;
  font-weight: lighter;
  letter-spacing: 2px;
}

.extra-info {
  line-height: 40px;
}

.message-button{
  float: right;
  width: 100px;
  border-radius: 8px;
  border: 1px solid #00881d;
  text-align: center;
  line-height: 40px;
  color: #fff;
  margin-top: 16px;
  margin-right: 16px;
  background-color: #27ae60;
  cursor:pointer;
  font-family: 'Roboto', sans-serif;
}

  .message-button:hover{
    background-color: #2ecc71
  }

.tagline {
  font-size: 20px;
}
