@import "primary.styl"

body {
  background-color: #e9ebee;
}

.profile {
  color: black;
  width: 700px;
  margin: auto;
  margin-top: 35px;
  margin-bottom: 35px;
}

.header {
  overflow: hidden;

  img {
    max-width: 128px;
    max-height: 128px;
    vertical-align: bottom;
  }
}

.pic {
  display: inline-block;
}

.header, .about, .fav-games, .platform {
  border-radius: 8px;
  border: 1px solid #dddddd;
  background-color: white;
  margin-bottom: 35px;
}

.info {
  display: inline-block;
  vertical-align: top;
  margin-left: 20px;
}

.username {
  display: inline;
  vertical-align: top;
  font-size: 40px;
  font-weight: lighter;
  letter-spacing: 2px;
}

.extra-info {
  line-height: 40px;
}

.right-side {
  float: right;
  display: inline-block;
}

.profile-one-ups, .profile-coins {
  text-align: right;
  margin-right: 16px;
  margin-top: 7px;
  font-size: 18px;
}

.message-button {
  width: 100px;
  border-radius: 4px;
  border: 1px solid #00881d;
  text-align: center;
  line-height: 40px;
  color: #fff;
  margin-top: 16px;
  margin-right: 16px;
  background-color: #27ae60;
  cursor: pointer;
  font-family: 'Roboto', sans-serif;
}

.message-button:hover {
  background-color: #2ecc71
}

.tagline {
  font-size: 18px;
}

.name, .bio {
  padding-bottom: 10px;
}

.about div, .fav-games div, .platform div {
  padding-left: 25px;
  padding-right: 25px;
}

img.coin {
  vertical-align: top;
  padding-top: 5px;
  padding-left: 8px;
  padding-right: 8px;
}

.about-header, .fav-games-header, .platform .header {
  font-size: 20px;
  line-height: 40px;
  border-bottom-style: solid;
  border-width: 1px;
  border-color: #ddd;
  background-color: #f3f3f3;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  padding-bottom:0;
  margin-bottom: 16px;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.about, .fav-games{
  padding-bottom:20px;
}

.name {
  font-size: 26px;
}

.bio {
  font-size: 14px;
  line-height: 150%;
}

.status{
  display: inline-block;
  padding: 5px;
  margin-top: 22px;
  margin-left: 16px;
  border-radius: 100%;
}

.online{
  box-shadow: 0 0 0 2.5px #00d280;
}

.offline{
  box-shadow: 0 0 0 2.5px #FF0000;
}

.games div{
  padding:0;
}

.game {
  width: 125px;
  display: inline-block;
  text-align:center;
}

.game-title {
  font-size: 13px;
}

img.boxart {
  max-width: 120px;
  border: 1px solid #ddd;
}

img.boxart:hover{
  border: 1px solid wasdWithMePurple;
  box-shadow: 0 0 25px wasdWithMePurple;
}

.platform{

}

.steam {
  background: #c9c9c8;
}
.steam .header {
  background: #171a21;
  border-color: #171a21;
  color: white;
}

.xbox {
  background: #baccb6;
}
.xbox .header {
  background: #107c10;
  border-color: #107c10;
  color: white;
}

.playstation {
  background: #afb9cc;
}
.playstation .header {
  background: #003791;
  border-color: #003791;
  color: white;
}

.twitch {
  background: #c2b0cc;
}
.twitch .header {
  background: #6441A5;
  border-color: #6441A5;
  color: white;
}