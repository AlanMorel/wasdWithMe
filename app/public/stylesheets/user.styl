@import "primary.styl"

body {
  background-color: #e9ebee;
}

.profile {
  color: black;
  width: 700px;
  margin: auto;
  margin-top: 50px;
  margin-bottom: 50px;

  img {
    max-width: 128px;
    max-height: 128px;
    vertical-align: bottom;
  }
}

.header {
  overflow: hidden;
  margin-bottom: 25px;
}

.pic {
  display: inline-block;
}

.header, .about {
  border-radius: 8px;
  border: 1px solid #dddddd;
  background-color: white;

}

.info {
  display: inline-block;
  vertical-align: top;
  margin-left: 20px;
}

.username {
  display: inline;
  vertical-align: top;
  font-size: 40px;
  font-weight: lighter;
  letter-spacing: 2px;
}

.extra-info {
  line-height: 40px;
}

.right-side {
  float: right;
  display: inline-block;
}

.profile-one-ups, .profile-coins {
  text-align: right;
  margin-right: 16px;
  margin-top: 7px;
  font-size: 18px;
}

.message-button {
  width: 100px;
  border-radius: 4px;
  border: 1px solid #00881d;
  text-align: center;
  line-height: 40px;
  color: #fff;
  margin-top: 16px;
  margin-right: 16px;
  background-color: #27ae60;
  cursor: pointer;
  font-family: 'Roboto', sans-serif;
}

.message-button:hover {
  background-color: #2ecc71
}

.tagline {
  font-size: 18px;
}

.name, .bio {
  padding-bottom: 10px;
}

.about div {
  padding-left: 25px;
  padding-right: 25px;
}

img.coin {
  vertical-align: top;
  padding-top: 5px;
}

.about-header {
  font-size: 20px;
  line-height: 40px;
  border-bottom-style: solid;
  border-width: 1px;
  border-color: #ddd;
  background-color: #f3f3f3;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  padding-bottom:0;
  margin-bottom: 10px;
}

.name {
  font-size: 26px;
}

.bio {
  font-size: 14px;
  line-height: 150%;
}

.status{
  display: inline-block;
  padding: 5px;
  margin-top: 22px;
  margin-left: 16px;
  border-radius: 100%;
}

.online{
  box-shadow: 0 0 0 2.5px #00d280;
}

 .offline{
   box-shadow: 0 0 0 2.5px #FF0000;
 }