@import "primary.styl"
body {
  background-color: #e9ebee;
}
.profile {
  color: black;
  width: 700px;
  margin: auto;
  margin-top: 35px;
  margin-bottom: 35px;
}
.header {
  overflow: hidden;
  img {
    max-width: 128px;
    max-height: 128px;
    vertical-align: bottom;
  }
}
.pic {
  display: inline-block;
  min-height: 128px;
}
.header, .about, .fav-games, .platform, .all-games {
  border-radius: 8px;
  border: 1px solid #dddddd;
  background-color: white;
  margin-bottom: 35px;
}
.user-info {
  display: inline-block;
  vertical-align: top;
  margin-left: 20px;
}
.username {
  display: inline;
  vertical-align: top;
  font-size: 40px;
  font-weight: lighter;
  letter-spacing: 2px;
}
.extra-info {
  line-height: 40px;
}
.right-side {
  float: right;
  display: inline-block;
}
.profile-one-ups, .profile-coins {
  text-align: right;
  margin-right: 16px;
  margin-top: 7px;
  font-size: 18px;
}
.message-button, .edit-profile-button, .discard-button {
  width: 100px;
  border-radius: 4px;
  text-align: center;
  line-height: 40px;
  color: white;
  margin-top: 16px;
  margin-right: 16px;
  cursor: pointer;
  font-family: 'Roboto', sans-serif;
}
.edit-profile-button {
  border: 1px solid #146588;
  background-color: #3e72ae;
}
.edit-profile-button:hover {
  background-color: #2c89cc
}
.message-button {
  border: 1px solid #00881d;
  background-color: #27ae60;
}
.message-button:hover {
  background-color: #2ecc71
}
.tagline {
  font-size: 18px;
}
.user-name, .bio {
  padding-bottom: 10px;
}
.about div, .fav-games div, .platform div, .all-games div {
  padding-left: 25px;
  padding-right: 25px;
}
img.coin {
  vertical-align: top;
  padding-top: 5px;
  padding-left: 8px;
  padding-right: 8px;
}
.about-header, .fav-games-header, .platform .header, .all-games-header {
  font-size: 20px;
  line-height: 40px;
  border-bottom-style: solid;
  border-width: 1px;
  border-color: #ddd;
  background-color: #f3f3f3;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  padding-bottom: 0;
  margin-bottom: 16px;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.about, .fav-games, .all-games {
  padding-bottom: 20px;
}
.user-name {
  font-size: 26px;
}
.bio {
  font-size: 14px;
  line-height: 150%;
}
.status {
  display: inline-block;
  padding: 5px;
  margin-top: 22px;
  margin-left: 16px;
  border-radius: 100%;
}
.online {
  box-shadow: 0 0 0 2.5px #00d280;
}
.offline {
  box-shadow: 0 0 0 2.5px #FF0000;
}
.games div, .games-list div {
  padding: 0;
  position: relative;
}
.game {
  width: 125px;
  display: inline-table;
  text-align: center;
  margin-bottom: 14px;
}
.game-title {
  font-size: 13px;
}
img.boxart {
  max-width: 120px;
  border: 1px solid #ddd;
}
img.boxart:hover {
  border: 1px solid wasdWithMePurple;
  box-shadow: 0 0 25px wasdWithMePurple;
}
.availability-header {
  font-size: 20px;
  img{
    max-height: 16px;
    margin-right: 5px;
  }
}
.availability {
  font-size: 16px;
  margin-top: 8px;
  img {
    max-height: 20px;
    vertical-align: bottom;
    margin-right: 10px;
  }
  div {
    font-weight: lighter;
  }
}
.availability-type {
  font-weight: normal;
}
.checkbox, li {
  font-weight: lighter;
  font-size: 16px;
}
ul {
  margin-top: 0;
}
.platform-name {
  font-size: 28px;
  padding-bottom: 16px;
}
.steam {
  background: #fffffe;
}
.steam .header {
  background: #171a21;
  border-color: #171a21;
  color: white;
}
.xbox {
  background: #f3ffed;
}
.xbox .header {
  background: #107c10;
  border-color: #107c10;
  color: white;
}
.playstation {
  background: #edf4ff;
}
.playstation .header {
  background: #003791;
  border-color: #003791;
  color: white;
}
.twitch {
  background: #f9ebff;
}
.twitch .header {
  background: #6441A5;
  border-color: #6441A5;
  color: white;
}
.button{
  width:300px;
  height: 75px;
  font-size: 28px;
}
.profile-pic {
  position: relative;
}
@media only screen and (max-width: 700px) {
  .profile{
    width: 95%;
    padding: 0 1vw 0 1vw;
  }
  .header img {
    max-width: 100%;
    max-height: 100%;
    vertical-align: bottom;
  }
  .pic{
    text-align: center;
    width: 100%;
  }
  .username, .tagline, .extra-info{
    padding-top:2px;
  }
  .username {
    font-size: 10vw;
  }
  .user-info{
    display: block;
    vertical-align: top;
    margin: auto;
    text-align: center;
  }
  .extra-info{
    font-size: 4vw;
  }
  .tagline{
    font-size: 3.5vw;
  }
  .right-side{
    float: left;
    width: 100%;
    text-align:center;
  }
  .profile-one-ups, .profile-coins {
    text-align:center;
    margin-top:15px;
    margin-bottom:15px;
  }
  .message-button, .discard-button{
    margin: auto;
    margin-top:25px;
    margin-bottom: 18px;
  }
  .status {
    margin-top: 10px;
    padding: 1vw;
    margin-left:8px;
  }
  .button{
    width:100%;
    height: 15vw;
    font-size: 5vw;
  }
  .games, .games-list {
    text-align: center;
  }
  .about div, .fav-games div, .platform div, .all-games div {
    padding-left: 10px;
    padding-right: 10px;
  }
}