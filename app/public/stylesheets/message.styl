@import "primary.styl"
body {
  background-color: #e9ebee;
}
.container{
  width: 850px;
  margin: auto;
  display: flex;
}
.all-messages{
  float: left;
  width: 250px;
  min-height: 700px;
  border-radius: 8px;
  border: 1px solid #ddd;
  background-color: white;
  margin: 35px 25px 0 0;
}
.top-header{
  color: black;
  text-align: center;
  font-size: 20px;
  border-bottom: 1px beige;
  border-bottom: 1px solid #ddd;
  padding: 10px;
}
.main{
  float: right;
  width: 600px;
}
.header {
  color: black;
  margin: 35px 0 35px 0;
  border-radius: 8px;
  border: 1px solid #ddd;
  background-color: white;
}
.input{
  width: 75%;
  padding: 6px;
  margin-top: 10px;
  font-size: 16px;
}
.button{
  font-size: 15px;
  border-radius: 0;
  width: 20%;
  padding: 6px 0;
}
.chat {
  background-color: white;
  border-radius: 8px;
  padding: 12px;
  border: 1px solid #ddd;
  color: white;
  height: 500px;
  max-height: 500px;
  overflow-y: auto;
}
.bubble{
  width: 100%;
  display: inline-block;
}
.other-message, .own-message{
  display: inline-block;
  border-radius: 10px;
  padding: 5px 10px 5px 10px;
}
.other-message{
  color: black;
  background-color: lightgrey;
}
.own-message{
  background-color: wasdWithMePurple;
  color: white;
  float: right;
}
.pic,.user-info{
  display: inline-block;
  vertical-align: top;
}
.user-info{
  margin-left: 20px;
}
.profile-pic{
  max-width: 128px;
  max-height: 128px;
  vertical-align: middle;
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}
.username{
  display: inline;
  vertical-align: top;
  font-size: 40px;
  font-weight: lighter;
  letter-spacing: 2px;
}
.extra-info {
  line-height: 40px;
}
.tagline {
  font-size: 17px;
}
