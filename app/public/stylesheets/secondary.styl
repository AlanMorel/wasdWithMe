@import "master.styl"
@import "variables.styl"
html {
  background: wasdWithMePurple;
}
body {
  text-align: center;
  margin-top: 20px;
  color: black;
}
.button {
  cursor: pointer;
  background: white;
  -webkit-transition: all 0.1s ease-in-out;
  -moz-transition: all 0.1s ease-in-out;
  -o-transition: all 0.1s ease-in-out;
  transition: all 0.1s ease-in-out;
  border-radius: 4px;
  color: black;
  padding: 3% 7%;
  font-size: 20px;
  transition(all 0.1s ease-in-out);
  text-transform: uppercase;
  font-family: Roboto, sans-serif;
  font-weight: bold;
  letter-spacing: 2px;
}
.button:hover {
  background: wasdWithMePurple;
  color: white;
  border: 1px solid wasdWithMePurple;
}
.container {
  text-align: center;
  margin: auto;
  width: 550px;
  background-color: white;
  border-radius: 18px;
  padding: 14px 0 50px 0;
  margin-bottom: 20px;
}
img {
  text-align: center;
  margin-bottom: 30px;
}
.container div {
  padding-top: 20px;
  text-align: left;
}
label {
  width: 200px;
  font-size: 20px;
  float: left;
  text-align: right;
  margin-right: 10px;
}
input, select {
  font-size: 18px;
  width: 250px;
  border-color: #ddd;
}
.title {
  color: white;
  padding: 16px 0 16px 0;
  background: -webkit-linear-gradient(left, rgba(255, 0, 0, 0), rgb(0, 0, 0), rgba(255, 0, 0, 0));
  margin: auto;
  margin-bottom: 30px;
  width: 500px;
}
.container .action-button {
  text-align: center;
}
.links {
  font-size: 18px;
  margin-bottom: 50px
  a {
    margin: 0 10px 0 10px;
  }
}
.feedback{
  background-color: #fdc4c4;
  line-height: 50px;
  margin-top: 30px;
}
@media only screen and (max-width: 600px) {
  img {
    height: 150px;
  }
  .title, .container {
    width: 80%;
  }
  .container {
    padding: 0 5% 10% 5%;
  }
  label {
    text-align: left;
    font-size: 24px;
    padding-bottom: 10px;
  }
  input, select, label {
    width: 96%;
  }
}