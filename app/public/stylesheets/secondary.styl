@import "master.styl"

html {
  background: wasdWithMePurple;
}

body {
  text-align: center;
  margin-top: 20px;
  color: black;
}

.button {
  font-family: 'Source Sans Pro', sans-serif;
  letter-spacing: 1px;
  border: 1px solid #cccccc;
  cursor: pointer;
  background: white;
  -webkit-transition: all 0.1s ease-in-out;
  -moz-transition: all 0.1s ease-in-out;
  -o-transition: all 0.1s ease-in-out;
  transition: all 0.1s ease-in-out;
  border-radius: 4px;
  font-weight: lighter;
  padding: 2% 6%;
  text-decoration: none;
  font-size: 24px;
}

.button:hover {
  background: wasdWithMePurple;
  color: white;
  border: 1px solid #55378c;
}

.container {
  text-align: center;
  margin: auto;
  width: 550px;
  background-color: white;
  border-radius: 18px;
  padding-bottom: 50px;
  margin-bottom: 75px;
}

img {
  text-align: center;
  margin-bottom: 30px;
}

.container div {
  padding-top: 30px;
  text-align: left;
}

label {
  width: 200px;
  font-size: 20px;
  float: left;
  text-align: right;
  margin-right: 1vw;
}

input, select {
  font-size: 20px;
}

.title {
  color: white;
  padding-top: 16px;
  padding-bottom: 16px;
  background: -webkit-linear-gradient(left, rgba(255, 0, 0, 0), rgb(0, 0, 0), rgba(255, 0, 0, 0));
  margin: auto;
  margin-bottom: 30px;
  width: 500px;
  font-size: 16px;
}

.container .action-button {
  text-align: center;
}

@media only screen and (max-width: 600px) {

  img {
    height: 150px;
  }

  .title, .container {
    width: 80%;
  }

  .container {
    padding-left: 5%;
    padding-right: 5%;
  }

  label {
    text-align: left;
    font-size: 24px;
  }

  input, select, label {
    width: 100%;
  }
}