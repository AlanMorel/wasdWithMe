@import "variables.styl"
html {
  font-family: 'Open Sans', sans-serif;
  color: white;
}
body {
  margin: 0;
}
img {
  vertical-align: top;
}
a {
  color: white;
  text-decoration: none;
}
input, textarea, select {
  border: 1px solid #ddd;
  padding: 4px;
}
input:focus, textarea:focus {
  border-color: wasdWithMePurple;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px wasdWithMePurple;
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px wasdWithMePurple;
}
input[type="image"]{
  border:0;
  padding:0;
}